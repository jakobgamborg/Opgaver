            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="kortTekst" alignment="TOP_LEFT" layoutX="50.0" layoutY="30.0" prefHeight="200" prefWidth="400">
